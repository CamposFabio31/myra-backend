const express = require('express');
const cors = require('cors');
const bodyParser = require('body-parser');

const app = express();
app.use(cors());
app.use(bodyParser.json());

app.post('/myra', async (req, res) => {
  const userMessage = req.body.message;

  if (!userMessage) {
    return res.status(400).json({ reply: "I didn't receive anything to think about." });
  }

  console.log("You said:", userMessage);

  const reply = `I heard you say: "${userMessage}", and I'm right here with you.`;

  res.json({ reply });
});

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => {
  console.log(`Myra backend server running on port ${PORT}`);
});
